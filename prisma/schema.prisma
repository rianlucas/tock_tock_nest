generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  lastName  String
  document  String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Wallet    Wallet[]
}

model Wallet {
  id                   String                 @id @default(uuid())
  name                 String
  balance              Float                  @default(0)
  createdAt            DateTime               @default(now())
  updatedAt            DateTime               @updatedAt
  userId               String
  user                 User                   @relation(fields: [userId], references: [id])
  Asset                Asset[]
  Transaction          Transaction[]
  WalletAssetSummaries WalletAssetSummaries[]
}

model Asset {
  id                   String                 @id @default(uuid())
  name                 String
  ticket               String
  price                Float
  createdAt            DateTime               @default(now())
  updatedAt            DateTime               @updatedAt
  wallet               Wallet[]
  Transaction          Transaction[]
  WalletAssetSummaries WalletAssetSummaries[]
}

model Transaction {
  id        String   @id @default(uuid())
  type      String
  amount    Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  walletId  String
  wallet    Wallet   @relation(fields: [walletId], references: [id])
  AssetId   String
  asset     Asset    @relation(fields: [AssetId], references: [id])
}

model WalletAssetSummaries {
  id               String   @id @default(uuid())
  walletId         String
  wallet           Wallet   @relation(fields: [walletId], references: [id])
  assetId          String
  asset            Asset    @relation(fields: [assetId], references: [id])
  averagePrice     Float
  assetCount       Float
  totalInvestiment Float
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}
